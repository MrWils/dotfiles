# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
		colors = true
		interval = 5
}

order += "disk /"
order += "cpu_usage"
order += "memory"
order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

disk "/" {
    format = "Free storage space: %avail"
}

cpu_usage {
	  format = "CPU: %usage"
}

memory {
    format = "RAM: %used"
    threshold_degraded = "10%"
}

wireless _first_ {
		format_up = "W: %quality"
		format_down = "W: down"
}

ethernet _first_ {
		format_up = "E: %speed"
		format_down = "E: down"
}

battery all {
		format = "%status: %percentage"
}

tztime local {
		format = "%Y-%m-%d %H:%M "
}

volume master {
		format = "V: %volume"
		format_muted = "V: muted %volume"
		device = "default"
		mixer = "Master"
		mixer_idx = 0
}
